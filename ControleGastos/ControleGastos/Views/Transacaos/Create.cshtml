@model ControleGastos.Models.Transacao

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar</h1>

<h4>Transações</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <select asp-for="PessoaId" class="form-control" asp-items="ViewBag.PessoaId"></select>
                <label asp-for="PessoaId"></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Descricao" class="form-control" placeholder=" ">
                <label asp-for="Descricao"></label>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <select asp-for="Tipo" class="form-control">
                    <option value="Despesa">Despesa</option>
                    <option value="Receita">Receita</option>
                </select>
                <label asp-for="Tipo"></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Valor" class="form-control" placeholder=" ">
                <label asp-for="Valor"></label>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Adicionar" class="btn btn-outline-success" />
        <a class="btn btn-outline-danger" asp-action="Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
