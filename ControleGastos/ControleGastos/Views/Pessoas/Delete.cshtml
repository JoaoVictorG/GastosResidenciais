@model ControleGastos.Models.Pessoa

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>
<div>
    <h4>Pessoa</h4>
    <hr />
    <div class="row">
        <div class="col-md">
            <div class="form-floating mb-3">
                <span class="form-control">@Html.DisplayFor(model => model.Nome)</span>
                <label>@Html.DisplayNameFor(model => model.Nome)</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating mb-3">
                <span class="form-control">@Html.DisplayFor(model => model.Idade)</span>
                <label>@Html.DisplayNameFor(model => model.Idade)</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating mb-3">
                <span class="form-control">@Html.DisplayFor(model => model.DataRegistro)</span>
                <label>@Html.DisplayNameFor(model => model.DataRegistro)</label>
            </div>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-outline-danger" />
        <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>
