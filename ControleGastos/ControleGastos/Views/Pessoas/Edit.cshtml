@model ControleGastos.Models.Pessoa

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Pessoa</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DataRegistro" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Nome" class="form-control" placeholder=" ">
                <label asp-for="Nome"></label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Idade" class="form-control" placeholder=" ">
                <label asp-for="Idade"></label>
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-outline-success" />
        <a class="btn btn-outline-danger" asp-action="Index">Cancelar</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
